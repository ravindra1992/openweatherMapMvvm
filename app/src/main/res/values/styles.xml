<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CurrentTempTitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/current_temp_and_weather_data_black</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/textView_current_temp_font_size</item>
    </style>

    <style name="CurrentCitySubTitleAppearance" parent="CurrentTempTitleAppearance">
        <item name="android:textColor">@color/current_city_black</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">@dimen/textView_current_city_font_size</item>
    </style>

    <style name="WeatherDataAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/current_temp_and_weather_data_black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/weather_data_text_size</item>
    </style>

    <style name="WeatherErrorTitleAppearance" parent="CurrentCitySubTitleAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textView_network_error_text_size</item>
    </style>

    <style name="RetryButtonAppearance" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/retry_button_black</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
